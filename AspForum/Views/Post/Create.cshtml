@model AspForum.Models.NewPostModel

<h2>Create a new post for a @Model.topicName topic:</h2>

<form asp-action="AddPost" method="post" id="posAddingForm">
    <div class="form-group">
        <label asp-for="postTitle"></label>
        <input asp-for="postTitle" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="postContent"></label>
        <textarea asp-for="postContent" class="form-control"></textarea>
    </div>
    <button type="submit" id="creationSubmitBtn" class="btn btn-success">
        Submit
    </button>
    <input asp-for="topicId" type="hidden"/>
</form>