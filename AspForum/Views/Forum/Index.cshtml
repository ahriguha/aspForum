@model AspForum.Models.TopicsListModel

<h1>Topics</h1>
<table class="table table-hover" id="topicListTable">
    <tbody>
        @foreach(var topic in Model.topicsList)
        {
        <tr>
            <td>
                <a asp-controller="Forum" asp-action="Topic" asp-route-id="@topic.Id">
                    @topic.Title
                </a>               
            </td>
            <td>
                @topic.Description
            </td>
            <td>
                @topic.Created
            </td>
        </tr>
        }
    </tbody>
</table>